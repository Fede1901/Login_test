<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/css/style.css">
    <title>Registro</title>
</head>
<body>
    <div class="register-form">
        <h1>Registro de usuario</h1>

        <form action="register" method="POST">
            <div> 
                <label for="username">Usuario:</label>
                <input type="text" id="user" name="user" required> 
            </div>

            <label for="name">Nombre y Apellido:</label>
                <input type="text" id="name" name="name" required> 
            <label for="rol">Rol</label>
            <select name="rol" id="rol" class="select-css">
                <option value="admin" selected>Administardor</option>
                <option value="data entry">Usuario</option>
                </select>

            <div>
                <label for="pass">Contrase√±a:</label>
                <input type="password" name="pass" required tabindex="4"> 
            </div>
            
            <div class="button-container">
                <input type="submit" class = "btn-save" value="Guardar"> 
                <input type="button" class ="btn-cancel" value="Cancelar"> 
                
            </div>
        </form>
    </div>
    
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<% if (typeof alert != "undefined")  { %>
 <script>
 Swal.fire({
   title:'<%= alertTitle %>',
   text:'<%= alertMessage %>',
   icon:'<%= alertIcon %>',
   showConfirmButton: <%= showConfirmButton %>,
   timer: <%= timer %>
 }).then(()=>{
   window.location='/<%= ruta %>'
 })
 </script>
<% } %>
 </div>
</body>
</html>